interface JobCreationState {
  currStep: number;
  goNextStep: () => void;
  goPrevStep: () => void;
  setStep: (step: number) => void;
}
export const useJobCreationStore = create<JobCreationState>()((set) => ({
  currStep: 1,
  goNextStep: () => set((state) => ({ currStep: state.currStep + 1 })),
  goPrevStep: () => set((state) => ({ currStep: state.currStep - 1 })),
  setStep: (step) => set(() => ({ currStep: step })),
}));